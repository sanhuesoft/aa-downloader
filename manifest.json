{
  "manifest_version": 3,
  "name": "Anna's Archive Downloader",
  "version": "1.0",
  "description": "Automatiza el proceso de descarga en Anna's Archive",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.annas-archive.org/*",
        "*://*.annas-archive.li/*",
        "*://*.annas-archive.se/*",
        "*://*.annas-archive.gs/*",
        "*://*.annas-archive.is/*"
      ],
      "js": ["content.js"]
    }
  ]
}